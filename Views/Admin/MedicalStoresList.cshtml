                    </form>
                    <script>
                        $(document).ready(function () {
                            $("#submit1").click(function () {
                                var a = $("#sn").val();
                                var b = $("#on").val();
                                var u = $("#ln").val();
                                var o = $("#lon").val();
                                var c = $("#email").val();
                                var d = $("#ta").val();
                                var e = $("#cn").val();
                                var f = $("#od").val();
                                var g = $("#message1").val();
                                var i = $("#message2").val();


                                $.ajax({
                                    url: "http://localhost:52257/api/MedList",
                                    type: "Post",
                                    data: JSON.stringify({ StoreNames: a, OwnerName: b, LicenseNumber: u, ContactNo: e, LicenseOwnerName: o, E_mail: c, TimeAvailability: d, DeliveryLocation: i, StoreLocation: g, OrderDuration: f }),

                                    contentType: 'application/json; charset=utf-8',
                                    success: function (data) {
                                        alert();
                                    },
                                    error: function () { alert('error'); }
                                });
                            });
                        });
                    </script>

                </div>
                <script>
                    $(document).ready(function () {

                        $.ajax({
                            type: 'GET',
                            url: "http://localhost:52257/api/MedList",
                            dataType: 'json',
                            success: function (data) {
                                console.log(data);

                                var str = " ";
                                for (var i = 0; i < data.length; i++) {
                                    str += "<tr>";
                                    str += "<td id='r" + i + "'>" + data[i].Id + "</td>"
                                    str += "<td id='r" + i + "'>" + data[i].StoreNames + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].OwnerName + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].LicenseNumber + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].LicenseOwnerName + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].E_mail + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].TimeAvailability + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].ContactNo + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].OrderDuration + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].StoreLocation + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].DeliveryLocation + "</td>";
                                    str += "<td>";
                                    str += "<div class='dropdown'>";
                                    str += "<button class='btn btn-block dropdown-toggle' type='button' data-toggle='dropdown'>Operation</button>";
                                    str += "<ul class ='dropdown-menu'>";
                                    str += "<li><a id = 'update'  href='#'>Update</a></li>";
                                    str += "<li><a id = 'deleteApi' href='#'>Delete</a></li>";
                                    str += "</ul>";
                                    str += "</div>";
                                    str += "</td>";
                                    str += "</tr>";
                                }
                                $('#med').html(str);
                            },

                            error: function (msg) { alert(msg); }
                        });

                    });

                </script>

                <script>


                    $(document).ready(function () {
                        // code to read selected table row cell data (values).
                        $("#med").on('click', '#deleteApi', function () {
                            // get the current row
                            var currentRow = $(this).closest("tr");
                            var id = currentRow.find("td:eq(0)").text(); // get current row 1st TD value
                            var data = id;

                            $.ajax({
                                url: "http://localhost:52257/api/MedList/" + data,
                                type: "Delete",
                                success: function (data) {

                                },
                                error: function (msg) { alert(msg); }
                            });
                            location.reload();
                        });
                    });
                </script>


                <script>
                    $(document).ready(function () {

                        // code to read selected table row cell data (values).
                        $("#med").on('click', '#update', function () {
                            $('#we').hide();
                            // get the current row
                            var currentRow = $(this).closest("tr");

                            var id = currentRow.find("td:eq(0)").text(); // get current row 1st TD value

                            var data = id;



                            $.ajax({
                                type: 'GET',
                                url: "http://localhost:52257/api/MedList/" + data,
                                dataType: 'json',
                                success: function (data) {
                                    console.log(data);


                                    var str = "";

                                    str += "<form action='#' method='post'>";
                                    str += "<input type='int' id='o'  value='" + data.Id + "' />"

                                    str += "<input type='text' id='a'    value='" + data.StoreNames + "'/>"
                                    str += "<input type='text' id='b' value='" + data.OwnerName + "'/>"

                                    str += "<input type='text' id='c'  value='" + data.LicenseNumber + "'/>"
                                    str += "<input type='int' id='d'   value='" + data.LicenseOwnerName + "'/>"

                                    str += "<input type='int' id='e' value='" + data.E_mail + "'/>"
                                    str += "<input type='text' id='f' value='" + data.TimeAvailability + "'/>"
                                    str += "<input type='text' id='g' value='" + data.ContactNo + "'/>"
                                    str += "<input type='text' id='h' value='" + data.OrderDuration + "'/>"
                                    str += "<input type='text' id='i' value='" + data.StoreLocation + "'/>"
                                    str += "<input type='text' id='j' value='" + data.DeliveryLocation + "'/>"
                                   
                                    str += "<input type='button' class='btn btn-lg ' onclick='azc()' type='button' value='Save'/>"
                                    str += "<a href='/Admin/MedicalStoresList' type='button' class='btn btn-lg ' type='button' value='Back'/>"
                                    str += "</form>";
                                    $('#int').html(str);
                                },
                                error: function (msg) { alert(msg); }
                            });
                        });
                    });
                </script>

                <script>

                    function azc() {
                        // debugger;

                        var id = $("#o").val();
                        var stname = $("#a").val();
                        var oname = $("#b").val();
                        var lnbr = $("#c").val();
                        var lon = $("#d").val();
                        var email = $("#e").val();

                        var ta = $("#f").val();
                        var contact = $("#g").val();
                        var od = $("#h").val();
                        var sl = $("#i").val();
                        var dl = $("#j").val();

                        $.ajax({
                            url: "http://localhost:52257/api/MedList/" + id,
                            type: "Put",
                            data: JSON.stringify({ Id: id, StoreNames: stname, OwnerName: oname,  LicenseNumber: lnbr, LicenseOwnerName: lon, E_mail: email, TimeAvailability: ta,ContactNo: contact,OrderDuration:od,StoreLocation:sl,DeliveryLocation:dl,  }),
                            contentType: 'application/json; charset=utf-8',
                            success: function (data) {
                                window.location.href = "/Admin/MedicalStoresList";
                            },
                            error: function (msg) { alert(msg); }
                        });
                    };

                </script>



