                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Owner Name is required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" id="ln" class="form-control" name="licenseno" placeholder="License Number"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Store Name is required" />
                                </div>

                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" id="lon" class="form-control" name="license" placeholder="License Owner name"
