@{
    ViewBag.Title = "MedicinesList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-xs-12" style="height:80px; width:100%"></div>
</div>
<div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-10" style="width: 75%; background-color: black;margin-right:0">
        <h1>Admin Panel<span class="icon fa-angle-double-left"></span>Medicine List</h1>
        <ul>
            <li style="color: black">
                <input type="text" placeholder="Search By Medicine"  style="height: 40px; width: 20%; border-radius: 5px; font-family: Gabriola; font-size: 22px; margin-top: 10px; " />
                

                <input type="text" placeholder="Search By Category "  style="height: 40px; width: 20%; border-radius: 5px; font-family: Gabriola; font-size: 22px; margin-top: 10px; " />
               
                <input type="text" placeholder="Search By Medicine Company"  style="height: 40px; width: 26%; border-radius: 5px; font-family: Gabriola; font-size: 22px; margin-top: 10px; " />
                <button id ="sea" type="button"><span class="icon fa-search"></span></button>

               



</li>
</ul>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#home" style="color:gray;">Add New</a></li>
            <li><a data-toggle="tab" href="#menu1" style="color: gray;">Medicine List</a></li>
        </ul>
        <div class="container ">
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active ">
                    <form class="well form-horizontal" action=" " method="post" id="contact_form" style="margin-top: 10px; width: 87%; background-color: rgba(41, 43, 43, 0.59);">
                        <fieldset>



                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="MedName" placeholder="Medicine name"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Medicine Name is required" />
                                </div>

                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="mg" placeholder="Medicine Weight (i.e: 50mg)"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Mg is required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="Medcompany" placeholder="Medicine Company"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Medicine Company is required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>

                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="quantity" placeholder="Quantity"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Quantity is required" />
                                </div>
                                <div class="col-sm-4" style="margin-top:3px;">
                                    <select name="status" class="control" style="background-color:#333;">
                                        <option value=" ">Type:</option>
                                        <option>Syrup</option>
                                        <option>Tablet</option>
                                        <option>Capsule</option>

                                    </select>
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>

                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="quantity" placeholder="Price per syrup"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Quantity is required" />
                                </div><label class="col-sm-3 control-label"></label>

                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="quantity" placeholder="Price per tablet/capsule"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Quantity is required" />
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label"></label>
                                <div class="col-sm-4" style="margin-top:3px;">
                                    <input type="text" class="form-control" name="quantity" placeholder="Price per Box"
                                           data-fv-row=".col-sm-4"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="The Quantity is required" />
                                </div>

                                <div class="col-sm-4" style="margin-top:3px;">
                                    <select name="category" class="control" style="background-color:#333;">
                                        <option value=" ">Category:</option>
                                        <option>Pain Killer</option>
                                        <option>Headach</option>
                                        <option>Antibiotics</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6 col-sm-offset-3" style="margin-top:1%;">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="agree" value="agree"
                                                   data-fv-notempty="true"
                                                   data-fv-notempty-message="You must agree with the terms and conditions" /> Agree with the terms and conditions
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-xs-9 col-xs-offset-3" style="margin-left:35%;">
                                    <button type="submit" style="background-color:rgba(49, 50, 49, 0.66)" name="signup" value="Sign up">Submit</button>
                                </div>
                            </div>


                       

                        </fieldset>
                    </form>
                </div>

                <script>
                    $(document).ready(function () {

                        $.ajax({
                            type: 'GET',
                            url: "http://localhost:52257/api/medicines",
                            dataType: 'json',
                            success: function (data) {
                                console.log(data);

                                var str = " ";
                                for (var i = 0; i < data.length; i++) {
                                    str += "<tr>";
                                    str += "<td id='r" + i + "'>" + data[i].Id + "</td>"
                                    str += "<td id='r" + i + "'>" + data[i].MedicineName + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].MedicineWeight + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].MedicineCompany + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].Quantity + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].PricePerSyrup + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].PricePerTablet_Capsule + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].PricePerBox + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].Type + "</td>";
                                    str += "<td id='r" + i + "'>" + data[i].Category + "</td>";
                                    str += "<td>";
                                    str += "<div class='dropdown'>";
                                    str += "<button class='btn btn-block dropdown-toggle' type='button' data-toggle='dropdown'>Operation</button>";
                                    str += "<ul class ='dropdown-menu'>";
                                    str += "<li><a id = 'update'  href='#'>Update</a></li>";
                                    str += "<li><a id = 'deleteApi' href='#'>Delete</a></li>";
                                    str += "</ul>";
                                    str += "</div>";
                                    str += "</td>";
                                    str += "</tr>";
                                }
                                $('#med').html(str);
                            },

                            error: function (msg) { alert(msg); }
                        });

                    });

                </script>
                <script>


                    $(document).ready(function () {
                        // code to read selected table row cell data (values).
                        $("#med").on('click', '#deleteApi', function () {
                            // get the current row
                            var currentRow = $(this).closest("tr");
                            var id = currentRow.find("td:eq(0)").text(); // get current row 1st TD value
                            var data = id;

                            $.ajax({
                                url: "http://localhost:52257/api/medicines/" + data,
                                type: "Delete",
                                success: function (data) {

                                },
                                error: function (msg) { alert(msg); }
                            });
                            location.reload();
                        });
                    });
                </script>
                <div id="menu1" class="tab-pane fade">
                    <div style="overflow:scroll; width:87%; height:250px;">
                        <div class="row ">
                            <div class="col-xs-12">
                                <table class="table table-inverse" style="margin-top: 10px; width: 1500px; height: auto; background-color: rgba(41, 43, 43, 0.59);">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Medicine Name</th>
                                            <th>Medicine Weight</th>
                                            <th>Medicine Company</th>
                                            <th>Quantity</th>
                                            <th>Price Per Syrup</th>
                                            <th>Price Per Tablet/Capsule</th>
                                            <th>Price Per Box</th>
                                            <th>Type</th>
                                            <th>Category</th>
                                            <th>Operation</th>
                                      
                                         </tr></thead>
                                   
                                      <tbody id="med"></tbody>
                                    
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>